{
	"compilerOptions": {
		"outDir": "dist",
		"target": "es2016",
		"declaration": true,
		"module": "commonjs",
		"strictNullChecks": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"lib": ["dom", "es2017"],
		"types": ["vite/client"],
		"noEmit": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"moduleResolution": "node"
	},
	"include": ["src", "src/**/*.hbs"],
	"exclude": ["node_modules", "dist"]
}
